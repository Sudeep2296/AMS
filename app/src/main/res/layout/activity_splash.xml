<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
        android:scaleType="centerCrop" android:src="@drawable/college_bg"/>
    <ImageView android:id="@+id/logo" android:layout_width="140dp" android:layout_height="140dp" android:layout_centerInParent="true"
        android:src="@drawable/college_logo"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adichunchanagiri Institute of Technology" android:layout_below="@+id/logo" android:layout_centerHorizontal="true" android:textColor="#FFFFFF" android:textSize="18sp"/>
</RelativeLayout>
