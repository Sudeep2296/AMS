<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp" android:layout_margin="16dp" android:padding="12dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
        <TextView android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp" android:text="Name"/>
        <TextView android:id="@+id/tvUsn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="USN"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
